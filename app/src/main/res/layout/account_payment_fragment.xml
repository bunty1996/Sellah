<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout-->
    <com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipyrefreshlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srl_direction="top">
        <!--app:srl_direction="top"-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/p_mainlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:gravity="center_vertical"
                            android:text="Default Card Payment"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/edt_card_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:text="Change"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_13sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:background="#b3aee3"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/rel_cardLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:background="@drawable/credit_card_back"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/p_onnewcardnumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="#fff" />

                            <TextView
                                android:id="@+id/p_onnewcardholdername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/p_onnewcardnumber"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="#fff" />

                            <TextView
                                android:id="@+id/p_onnewcard_expire"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/p_onnewcardholdername"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="#fff" />

                            <TextView
                                android:id="@+id/p_onnewcard_cvv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/p_onnewcardholdername"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:textColor="@color/colorWhite"
                                android:textColorHint="#fff" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rel_addCard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Add Card"
                                android:textColor="@color/colorWhite" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_3sdp"
                            android:text="Sellah Wallet"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/withdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/_3sdp"
                            android:text="Withdraw"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_13sdp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_addnewstrpeaccount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:background="#ea4444">

                        <RelativeLayout
                            android:id="@+id/add_rel"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130sdp"
                            android:background="@drawable/credit_card_back">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/sel_txt_bal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:text="Incoming funds"
                                        android:textColor="@color/colorWhite"
                                        android:textColorHint="#fff"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sel_txt_bal1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_toRightOf="@+id/sel_txt_bal"
                                        android:text="$0.00"
                                        android:textColor="@color/colorWhite"
                                        android:textColorHint="#fff"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_incoming"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/sel_txt_pend"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:hint="Balance: "
                                        android:textColor="@color/colorWhite"
                                        android:textColorHint="#fff"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sel_txt_pend1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_toRightOf="@+id/sel_txt_pend"
                                        android:text="$0.00"
                                        android:textColor="@color/colorWhite"
                                        android:textColorHint="#fff"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:paddingRight="@dimen/_5sdp"
                                        android:src="@drawable/faq"
                                        android:tint="@color/colorWhite" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/sel_txt_acc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/sel_txt_bal"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:hint="Sellah Account Number: "
                                        android:textColor="@color/colorWhite"
                                        android:textColorHint="#fff"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sel_txt_acc1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/sel_txt_bal1"
                                        android:layout_marginLeft="@dimen/_15sdp"
                                        android:layout_toRightOf="@+id/sel_txt_acc"
                                        android:text="1-111-111"
                                        android:textColor="@color/colorWhite"
                                        android:textColorHint="#fff"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/rel_qr_scan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:id="@+id/qr_code"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/qr_scan" />

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_margin="@dimen/_7sdp"
                                android:src="@drawable/powered_by_stripe" />

                        </RelativeLayout>

                        //---------------------------------------------

                        <RelativeLayout
                            android:id="@+id/scan_rel"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130sdp"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/rel_qr_id"
                                android:padding="@dimen/_12sdp">

                                <ImageView
                                    android:id="@+id/imgview_qr_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rel_qr_id"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:padding="@dimen/_5sdp">

                                <TextView
                                    android:id="@+id/txtview_wallet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="Wallet Id"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_11sdp" />

                                <TextView
                                    android:id="@+id/txtview_qr_code_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtview_wallet"
                                    android:layout_centerHorizontal="true"
                                    android:singleLine="true"
                                    android:text="aact_1EEHhkd_kdfk"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_11sdp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_above="@+id/img_poweredStripe2"
                                    android:layout_below="@+id/txtview_qr_code_id">

                                    <ImageView
                                        android:id="@+id/phone_qrScan"
                                        android:layout_width="@dimen/_26sdp"
                                        android:layout_height="@dimen/_26sdp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginBottom="@dimen/_2sdp"
                                        android:background="@drawable/qr_code_mobile" />

                                </RelativeLayout>


                                <ImageView
                                    android:id="@+id/img_poweredStripe2"
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/powered_by_stripe" />

                            </RelativeLayout>

                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_sellahwallet_clicklink"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/sellahwallet_red_dotback"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/dummylive1_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/dummylive3_text"
                            android:gravity="center_vertical"
                            android:text="+"
                            android:textColor="#9e9e9e"
                            android:textSize="@dimen/_35sdp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/dummylive3_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:text="Create Sellah Wallet"
                            android:textColor="#9e9e9e"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_stripe_connect"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">


                        <com.app.admin.sellah.controller.stripe.StripeButton
                            android:id="@+id/btn_stripe_connect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:visibility="gone" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/red_border_solid"
                            android:text="Save"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_13sdp"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout>

</LinearLayout>